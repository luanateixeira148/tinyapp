<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="justify-content-end">
      <% if (user) { %>
        <form action="/logout" method="POST" class="d-flex">
          <h5 style="color: white; margin-left: 1em; align-self: center; font-size: 16px; ">Logged in as: <b><%= user.email %></b></h6>
          <button type="submit" class="btn btn-outline-light" style="margin-left: 1em;">
            Logout
          </button>
        </form>
      <% } else { %>
        <div>
          <a href="/login" style="color: white; margin-left: 1em">Login</a>
          <a href="/register" style="color: white; margin-left: 1em">Register</a>
        </div>
      <% } %>
    </div>
  </nav>
</header>